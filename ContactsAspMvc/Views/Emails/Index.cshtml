@model IEnumerable<ContactsAspMvc.Models.Email>

@{
    ViewBag.Title = "Index";
}

<h2>E-mails</h2>

<p>
    @Html.ActionLink("Adicionar", "Create", new { contactId = ViewBag.ContactId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailType.EmailTypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.EmailAddress, "Edit", new { id = item.EmailId, contactId = ViewBag.ContactId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailType.EmailTypeName)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.EmailId })
        </td>
    </tr>
}

</table>
